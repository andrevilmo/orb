@{
    Layout = null;
}
<div class="row" id="powerwidgets">
    <div class="col-md-12 bootstrap-grid">
        <!-- New widget -->
        <div class="powerwidget dark-red powerwidget-sortable" id="registration-form-validation-widget" data-widget-editbutton="false" role="widget" style="">
            <header role="heading">
                <h2>Cadastrar<small>Sim Card</small></h2>
                <div class="powerwidget-ctrls" role="menu"><a href="#" class="button-icon powerwidget-fullscreen-btn"><i class="fa fa-arrows-alt "></i></a><a href="#" class="button-icon powerwidget-edit-btn"><i class="fa fa-cog"></i></a> <a href="#" class="button-icon powerwidget-toggle-btn"><i class="fa fa-chevron-circle-up "></i></a></div><span class="powerwidget-loader"></span>
            </header>
            <div class="inner-spacer" role="content" data-bind="if: Selected()">
                <div class="powerwidget-editbox">
                    <div>
                        <label>Estilos:</label>
                        <span data-widget-setstyle="pink" class="pink-btn"></span> <span data-widget-setstyle="blue" class="blue-btn"></span> <span data-widget-setstyle="dark-blue" class="dark-blue-btn"></span> <span data-widget-setstyle="green" class="green-btn"></span> <span data-widget-setstyle="green-alt" class="green-alt-btn"></span> <span data-widget-setstyle="green-acid" class="green-acid-btn"></span> <span data-widget-setstyle="yellow" class="yellow-btn"></span> <span data-widget-setstyle="purple" class="purple-btn"></span> <span data-widget-setstyle="cold-grey" class="cold-grey-btn"></span> <span data-widget-setstyle="dark-cold-grey" class="dark-cold-grey-btn"></span> <span data-widget-setstyle="orange" class="orange-btn"></span> <span data-widget-setstyle="red" class="red-btn"></span> <span data-widget-setstyle="dark-red" class="dark-red-btn"></span> <span data-widget-setstyle="black" class="black-btn"></span>
                    </div>
                </div>
                <form data-bind="submit: salvar" class="orb-form">
                    <header><span data-bind="text: Selected().Telefone"></span></header>
                    <fieldset>
                        <div class="row">
                            <section class="col col-9">
                                <div id="clienteCliente" placeholder="Cliente" data-bind="Select: Selected().ClienteId,DivShow:'SelectedCliente',TooltipMessage:'Cliente',IconClass:'glyphicon-briefcase',SetField:'ClienteId', ObjectToSet: model.Selected(),ValueField:'Id', SelectableItems: ko.mapping.toJS(model.Clientes()),DisplayField: 'Nome' "></div>
                                <div id="SelectedCliente"></div>
                                <!--
                                <label class="input">
                                    <i class="icon-prepend entypo-briefcase"></i>
                                    <input type="text" name="cliente" placeholder="Cliente">
                                    <b class="tooltip tooltip-bottom-right">Cliente Responsável pelo SimCard</b>

                                </label>-->
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-3">
                                <label class="input">
                                    <i class="icon-prepend fa fa-phone"></i>
                                    <input type="tel" class="ddd" name="ddd" data-bind="value: Selected().DDD,valueUpdate:'afterkeydown'" placeholder="DDD">
                                    <b class="tooltip tooltip-bottom-right">Código de Área</b>

                                </label>
                            </section>
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-append fa fa-phone"></i>
                                    <input type="tel" class="fone" name="telefone" placeholder="Telefone" data-bind="value: Selected().Telefone,valueUpdate:'afterkeydown'">
                                    <b class="tooltip tooltip-right">Número do Sim Card</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend glyphicon glyphicon-ban-circle"></i>
                                    <input type="text" name="pin" placeholder="PIN" data-bind="value: Selected().PIN,valueUpdate:'afterkeydown'">
                                    <b class="tooltip tooltip-right">PIN do Chip</b>
                                </label>
                            </section>
                        </div>

                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend glyphicon glyphicon-lock"></i>
                                    <input type="text" name="puk" placeholder="PUK" data-bind="value: Selected().PUK,valueUpdate:'afterkeydown'">
                                    <b class="tooltip tooltip-right">PUK do Chip</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-9">
                                <label class="input">
                                    <i class="icon-prepend fa fa-barcode"></i>
                                    <input type="text" name="iccid" placeholder="ICCID" data-bind="value: Selected().ICCID,valueUpdate:'afterkeydown'">
                                    <b class="tooltip tooltip-right">ICCID do Chip</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-5">
                                <label class="input">
                                    <i class="icon-prepend glyphicon glyphicon-sort"></i>
                                    <input type="text" name="plano" placeholder="Plano de Dados" data-bind="value: Selected().PlanoDados,valueUpdate:'afterkeydown'">
                                    <b class="tooltip tooltip-right">Plano de Dados do Chip</b>
                                </label>
                            </section>
                        </div>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-danger">Cadastrar</button>
                    </footer>
                </form>
            </div>
        </div>
        <!-- /End Widget -->
    </div>
</div>
