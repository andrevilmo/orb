@{
    Layout = null;
}
<div class="row" id="powerwidgets">
    <div class="col-md-12 bootstrap-grid">
        <!-- New widget -->
        <div class="powerwidget green powerwidget-sortable" id="registration-form-validation-widget" data-widget-editbutton="false" role="widget" style="">
            <header role="heading">
                <h2>Cadastrar<small>Motoristas</small></h2>
                <div class="powerwidget-ctrls" role="menu"><a href="#" class="button-icon powerwidget-fullscreen-btn"><i class="fa fa-arrows-alt "></i></a><a href="#" class="button-icon powerwidget-edit-btn"><i class="fa fa-cog"></i></a> <a href="#" class="button-icon powerwidget-toggle-btn"><i class="fa fa-chevron-circle-up "></i></a></div><span class="powerwidget-loader"></span>
            </header>
            <div class="inner-spacer" role="content" data-bind="if: Selected()">
                <div class="powerwidget-editbox">
                    <div>
                        <label>Estilos:</label>
                        <span data-widget-setstyle="pink" class="pink-btn"></span> <span data-widget-setstyle="blue" class="blue-btn"></span> <span data-widget-setstyle="dark-blue" class="dark-blue-btn"></span> <span data-widget-setstyle="green" class="green-btn"></span> <span data-widget-setstyle="green-alt" class="green-alt-btn"></span> <span data-widget-setstyle="green-acid" class="green-acid-btn"></span> <span data-widget-setstyle="yellow" class="yellow-btn"></span> <span data-widget-setstyle="purple" class="purple-btn"></span> <span data-widget-setstyle="cold-grey" class="cold-grey-btn"></span> <span data-widget-setstyle="dark-cold-grey" class="dark-cold-grey-btn"></span> <span data-widget-setstyle="orange" class="orange-btn"></span> <span data-widget-setstyle="red" class="red-btn"></span> <span data-widget-setstyle="dark-red" class="dark-red-btn"></span> <span data-widget-setstyle="black" class="black-btn"></span>
                    </div>
                </div>
                <form data-bind="submit: salvar" id="checkout-form" class="orb-form">
                    <header><span data-bind="text: Selected().Nome"></span></header>
                    <fieldset>
                        <div class="row">
                            <section class="col col-10">
                                <div id="clienteCliente" placeholder="Cliente" data-bind="Select: Selected().ClienteId,DivShow:'SelectedCliente',TooltipMessage:'Cliente',IconClass:'glyphicon-briefcase',SetField:'ClienteId', ObjectToSet: model.Selected(),ValueField:'Id', SelectableItems: ko.mapping.toJS(model.Clientes()),DisplayField: 'Nome' "></div>
                                <div id="SelectedCliente"></div>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-user"></i>
                                    <input data-bind="value: Selected().Nome,valueUpdate:'afterkeydown'" type="text" name="nome" placeholder="Nome">
                                    <b class="tooltip tooltip-bottom-right">Nome do Motorista</b>
                                </label>
                            </section>
                            <section class="col col-6">
                                <label class="input">
                                    <input type="text" name="sobrenome" data-bind="value: Selected().Sobrenome,valueUpdate:'afterkeydown'" placeholder="Sobrenome">
                                    <b class="tooltip tooltip-bottom-right">Sobrenome do Motorista</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-users"></i>
                                    <input type="text" data-bind="value: Selected().NumeroDOC,valueUpdate:'afterkeydown'" name="login" placeholder="Número do Documento">
                                    <b class="tooltip tooltip-bottom-right">Número do Documento</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-5">
                                <label class="select">
                                    <select name="categoriaCnh" data-bind="value: Selected().CategoriaCNH,valueUpdate:'afterkeydown'">
                                        <option value="0" selected="" disabled="">Categoria da CNH</option>
                                        <option value="1">A</option>
                                        <option value="2">B</option>
                                        <option value="3">C</option>
                                        <option value="4">D</option>
                                        <option value="5">E</option>
                                    </select>
                                    <i></i>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="label">Vencimento da CNH</label>
                                <label class="input">
                                    <i class="icon-append fa fa-calendar"></i>
                                    <input type="text" name="VencimentoCNH" id="VencimentoCNH" data-bind="dateControl: Selected().VencimentoCNH,valueUpdate:'afterkeydown'" />
                                </label>
                            </section>
                        </div>
                    </fieldset>
                    <header role="heading">
                        <h5>Informações Adicionais</h5>
                    </header>
                    <fieldset>
                        <div class="row">
                            <section class="col col-10">
                                <label class="input">
                                    <i class="icon-prepend  entypo-mail"></i>
                                    <input type="email" class="email" data-bind="value: Selected().Email,valueUpdate:'afterkeydown'" name="email" placeholder="Email">
                                    <b class="tooltip tooltip-bottom-right">Email do Motorista</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-phone"></i>
                                    <input type="text" class="fone" name="telefone" data-bind="value: Selected().Telefone,valueUpdate:'afterkeydown'"  id="phone" placeholder="Telefone">
                                    <b class="tooltip tooltip-right">Telefone do Motorista</b>

                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-mobile"></i>
                                    <input type="text" class="fone" name="celular" data-bind="value: Selected().Celular,valueUpdate:'afterkeydown'"  placeholder="Celular">
                                    <b class="tooltip tooltip-right">Celular do Motorista</b>
                                </label>
                            </section>
                        </div>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-success">Cadastrar</button>
                    </footer>
                </form>
            </div>
        </div>
        <!-- /End Widget -->
    </div>
</div>
