@{
    Layout = null;
}
<div class="row" id="powerwidgets">
    <div class="col-md-6 bootstrap-grid">
        <!-- New widget -->
        <div class="powerwidget dark-blue powerwidget-sortable" id="registration-form-validation-widget" data-widget-editbutton="false" role="widget" style="">
            <header role="heading">
                <h2>Cadastrar<small>Motoristas</small></h2>
                <div class="powerwidget-ctrls" role="menu"> <a href="#" class="button-icon powerwidget-delete-btn"><i class="fa fa-times-circle"></i></a>  <a href="#" class="button-icon powerwidget-fullscreen-btn"><i class="fa fa-arrows-alt "></i></a> <a href="#" class="button-icon powerwidget-toggle-btn"><i class="fa fa-chevron-circle-up "></i></a></div><span class="powerwidget-loader"></span>
            </header>
            <div class="inner-spacer" role="content">
                <form action="" id="registration-form" class="orb-form" novalidate="novalidate">
                    <header>Novo Motorista</header>
                    <fieldset>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-user"></i>
                                    <input type="text" name="nome" placeholder="Nome">
                                    <b class="tooltip tooltip-bottom-right">Nome do Motorista</b>
                                </label>
                            </section>
                            <section class="col col-6">
                                <label class="input">
                                    <input type="text" name="sobrenome" placeholder="Sobrenome">
                                    <b class="tooltip tooltip-bottom-right">Sobrenome do Motorista</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-users"></i>
                                    <input type="email" name="login" placeholder="Número do Documento">
                                    <b class="tooltip tooltip-bottom-right">Número do Documento</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-users"></i>
                                    <input type="email" name="login" placeholder="Categoria da CNH">
                                    <b class="tooltip tooltip-bottom-right">Categoria da CNH</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="label">Vencimento da CNH</label>
                                <label class="input">
                                    <i class="icon-append fa fa-calendar"></i>
                                    <input type="text" name="date" id="date">
                                </label>
                            </section>
                        </div>
                    </fieldset>
                    <header role="heading">
                        <h5>Informações Adicionais</h5>
                    </header>
                    <fieldset>
                        <div class="row">
                            <section class="col col-10">
                                <label class="input">
                                    <i class="icon-prepend  entypo-mail"></i>
                                    <input type="email" name="email" placeholder="Email">
                                    <b class="tooltip tooltip-bottom-right">Email do Motorista</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-phone"></i>
                                    <input type="tel" name="telefone" id="phone" placeholder="Telefone">
                                    <b class="tooltip tooltip-bottom-right">Telefone do Motorista</b>

                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-mobile"></i>
                                    <input type="tel" name="celular" id="phone" placeholder="Celular">
                                    <b class="tooltip tooltip-bottom-right">Celular do Motorista</b>
                                </label>
                            </section>
                        </div>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-success">Cadastrar</button>
                    </footer>
                </form>
            </div>
        </div>
        <!-- /End Widget -->
    </div>
</div>
