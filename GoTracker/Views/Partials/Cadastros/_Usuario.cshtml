@{
    Layout = null;
}
<div class="row" id="powerwidgets">
    <div class="col-md-12 bootstrap-grid">
        <!-- New widget -->
        <div class="powerwidget dark-red powerwidget-sortable" id="registration-form-validation-widget" data-widget-editbutton="false" role="widget" style="">
            <header role="heading">
                <h2>Cadastrar<small>Usuários</small></h2>
                <div class="powerwidget-ctrls" role="menu"><a href="#" class="button-icon powerwidget-fullscreen-btn"><i class="fa fa-arrows-alt "></i></a><a href="#" class="button-icon powerwidget-edit-btn"><i class="fa fa-cog"></i></a> <a href="#" class="button-icon powerwidget-toggle-btn"><i class="fa fa-chevron-circle-up "></i></a></div><span class="powerwidget-loader"></span>
            </header>
            <div class="inner-spacer" role="content" data-bind="if: Selected()">
                <div class="powerwidget-editbox">
                    <div>
                        <label>Estilos:</label>
                        <span data-widget-setstyle="pink" class="pink-btn"></span> <span data-widget-setstyle="blue" class="blue-btn"></span> <span data-widget-setstyle="dark-blue" class="dark-blue-btn"></span> <span data-widget-setstyle="green" class="green-btn"></span> <span data-widget-setstyle="green-alt" class="green-alt-btn"></span> <span data-widget-setstyle="green-acid" class="green-acid-btn"></span> <span data-widget-setstyle="yellow" class="yellow-btn"></span> <span data-widget-setstyle="purple" class="purple-btn"></span> <span data-widget-setstyle="cold-grey" class="cold-grey-btn"></span> <span data-widget-setstyle="dark-cold-grey" class="dark-cold-grey-btn"></span> <span data-widget-setstyle="orange" class="orange-btn"></span> <span data-widget-setstyle="red" class="red-btn"></span> <span data-widget-setstyle="dark-red" class="dark-red-btn"></span> <span data-widget-setstyle="black" class="black-btn"></span>
                    </div>
                </div>
                <form data-bind="submit: salvar" class="orb-form">
                    <header><span data-bind="text: Selected().Nome"></span></header>
                    <fieldset>
                        <div class="row">
                            <section class="col col-10">
                                <div id="clienteCliente" placeholder="Cliente" data-bind="Select: Selected().ClienteId,DivShow:'SelectedCliente',TooltipMessage:'Cliente',IconClass:'glyphicon-briefcase',SetField:'ClienteId', ObjectToSet: model.Selected(),ValueField:'Id', SelectableItems: ko.mapping.toJS(model.Clientes()),DisplayField: 'Nome' "></div>
                                <div id="SelectedCliente"></div>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-user"></i>
                                    <input type="text" data-bind="value: Selected().Nome,valueUpdate:'afterkeydown'" name="nome" placeholder="Nome">
                                    <b class="tooltip tooltip-bottom-right">Nome do Usuário</b>
                                </label>
                            </section>
                            <section class="col col-6">
                                <label class="input">
                                    <input type="text" name="sobrenome" data-bind="value: Selected().SobreNome,valueUpdate:'afterkeydown'" placeholder="Sobrenome">
                                    <b class="tooltip tooltip-bottom-right">Sobrenome do Usuário</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-users"></i>
                                    <input type="text" data-bind="value: Selected().Login,valueUpdate:'afterkeydown'" name="login" placeholder="Login">
                                    <b class="tooltip tooltip-right">Login do Usuário</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-lock"></i>
                                    <input type="password" data-bind="value: Selected().Senha,valueUpdate:'afterkeydown'" name="password" placeholder="Senha" id="password">
                                    <b class="tooltip tooltip-bottom-right">Senha do Usuário</b>
                                </label>
                            </section>
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend fa fa-lock"></i>
                                    <input type="password" name="passwordConfirm" data-bind="value: Selected().Senha,valueUpdate:'afterkeydown'" placeholder="Confirmar Senha">
                                    <b class="tooltip tooltip-bottom-right">Repita a senha</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <div id="perfilUsuario" placeholder="Perfil associado ao usuário" data-bind="Select: Selected().PerfilId,DivShow:'SelectedPerfil',TooltipMessage:'Perfil associado ao usuário',IconClass:'icon-prepend entypo-vcard',SetField:'PerfilId', ObjectToSet: model.Selected(),ValueField:'Id', SelectableItems: ko.mapping.toJS(model.Perfis()),DisplayField: 'Nome' "></div>
                                    <div id="SelectedPerfil" style="width: 300px !important"></div>                                </label>
                            </section>
                        </div>
                    </fieldset>
                    <header role="heading">
                        <h5>Informações Adicionais</h5>
                    </header>
                    <fieldset>
                        <div class="row">
                            <section class="col col-10">
                                <label class="input">
                                    <i class="icon-prepend  entypo-mail"></i>
                                    <input type="email" name="email" placeholder="Email" data-bind="value: Selected().Email,valueUpdate:'afterkeydown'">
                                    <b class="tooltip tooltip-bottom-right">Email do Usuário</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend glyphicon glyphicon-phone-alt"></i>
                                    <input type="text" name="telefone" class="fone" data-bind="value: Selected().Telefone,valueUpdate:'afterkeydown'" placeholder="Telefone">
                                    <b class="tooltip tooltip-right">Número do Telefone do Usuário</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-prepend entypo-mobile"></i>
                                    <input type="text" name="celular" placeholder="Celular" class="fone" data-bind="value: Selected().Celular,valueUpdate:'afterkeydown'">
                                    <b class="tooltip tooltip-right">Número do Celular do Usuário</b>
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="label">Data de Suspenção da Conta</label>
                                <label class="input">
                                    <i class="icon-append fa fa-calendar"></i>
                                    <input type="text" name="date" id="date" data-bind="dateControl: Selected().DataSuspensao,valueUpdate:'afterkeydown'" class="date">
                                    <b class="tooltip tooltip-right">Data de suspençao da conta do Usuário</b>
                                </label>
                            </section>
                        </div>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                    </footer>
                </form>
            </div>
        </div>
        <!-- /End Widget -->
    </div>
</div>
